<table id="events" class="table table-striped table-hover is-clickable">
  <thead>
  <tr>
    <th>Action</th>
    <th>Description</th>
    <th>Agent</th>
    <th>Date</th>
  </tr>
  </thead>

  <tbody>
  <% @events["events"].each do |event| %>
    <tr>
      <td><%= event["action"]%></td>
      <td><%= event["description"] %></td>
      <td><%= event["agent"].try(:name) %></td>
      <td><%= distance_of_time_in_words_to_now(event["created_at"]) %></td>
    </tr>
  <% end %>
    <%#= render 'events/event', event: event %>
  </tbody>
</table>
